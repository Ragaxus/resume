<html>

<head>
    <link rel="stylesheet" href="resume.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="header mx-auto">
            <h1><%= header.applicant_name %></h1>
            <div class="contact-info">
                <% header.contact_info.forEach(element => { %>
                <%= element %>
                <% }) %>
            </div>
            <span id="summary"><%= header.summary  %></span>
            <span>Last updated: <%= dateUpdated %></span>
        </div>
    </div>
    <div class="container">
        <div class="row gx-3">
            <div class="col-sm-10 card-deck ml-4 mt-4">
                <section class="card p-2">
                    <p class="card-title">Experience</p>
                    <div class="card-text">
                        <% experience.forEach((xp, xpIdx) => { %>
                        <div class="experience">
                            <div class="experience-info">
                                <span class="experience-orgname"><%= xp.org_name %></span>
                            </div>
                            <div class="experience-duration">
                                <span class="experience-title"><%= xp.title %></span>
                                <span class="experience-timespan"><%= xp.timespan %></span>
                            </div>
                            <div class="experience-description" id="xp<%= xpIdx %>">
                                <ul>
                                    <li> <%= xp.description[0] %>
                                        <% var subListLevel = 0 %>
                                        <% xp.description.slice(1).forEach(xpDesc => { %>
                                        <% if (xpDesc.startsWith("* ")) { %>
                                        <% if(subListLevel == 0) { subListLevel += 1; %> <ul> <% } %>
                                            <li> <%= xpDesc.slice(2) %> </li>
                                            <% } else { %>
                                            <% if(subListLevel > 0) {subListLevel -= 1; %>
                                        </ul> <% } %>
                                    </li>
                                    <li> <%= xpDesc %>
                                        <% } %>
                                        <% })%>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </section>
                <section class="card mt-2 p-2">
                    <p class="card-title">Education</p>
                    <div class="card-text">
                        <% education.forEach(edu => { %>
                        <div><span class="education-info"><%= edu.name %> - <%= edu.certification %></span></div>
                        <div><span class="education-description"><%= edu.description %></span></div>
                        <% }) %>
                    </div>
                </section>
            </div>
            <div class="col card-deck mt-4 ml-2 mr-4">
                <section class="card p-2">
                    <p class="card-title">Skills/Technologies</p>
                    <div class="card-text">
                        <ul class="skills">
                            <% skills.forEach(skill => { %>
                            <li><%= skill %></li>
                            <% }) %>
                        </ul>
                    </div>
                </section>
                <section class="card p-2 mt-2 portfolio">
                    <div>
                        <p><img width="30px" height="30px" src="images/github-icon.png" />My portfolio:</p>
                        <p><a href="<%= portfolioLink %>"><%= portfolioLink %></a></p>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>